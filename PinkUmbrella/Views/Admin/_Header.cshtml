@{
    var actionName = (string) ViewData["Action"];
    var detailsLiClass = actionName == "Index" ? "selected" : "";
    var settingsLiClass = actionName == "Settings" ? "selected" : "";
    var togglesLiClass = actionName == "Toggles" ? "selected" : "";
    var peersLiClass = (actionName == "Peers" || actionName == "PreviewPeer") ? "selected" : "";
    var usersLiClass = actionName == "Users" ? "selected" : "";
    var postsLiClass = actionName == "Posts" ? "selected" : "";
    var communityLiClass = actionName == "Community" ? "selected" : "";
}
