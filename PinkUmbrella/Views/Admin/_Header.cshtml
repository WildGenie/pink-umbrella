    <div class="container">
        <h1>Admin</h1>
        <div class="navbar-collapse collapse d-sm-inline-flex flex-sm-row-reverse">
            <ul class="navbar-nav flex-grow-1 highlight-selected">
                <li class="nav-item @detailsLiClass">
                    <a class="nav-link text-dark" asp-controller="Admin" asp-action="Index"><u>Admin</u></a>
                </li>
                <li class="nav-item @settingsLiClass">
                    <a class="nav-link text-dark" asp-controller="Admin" asp-action="Settings"><u>Settings</u></a>
                </li>
                <li class="nav-item @togglesLiClass">
                    <a class="nav-link text-dark" asp-controller="Admin" asp-action="Toggles"><u>Toggles</u></a>
                </li>
                <li class="nav-item @peersLiClass">
                    <a class="nav-link text-dark" asp-controller="Admin" asp-action="Peers"><u>Peers</u></a>
                </li>
                <li class="nav-item @usersLiClass">
                    <a class="nav-link text-dark" asp-controller="Admin" asp-action="Users"><u>Users</u></a>
                </li>
                <li class="nav-item @postsLiClass">
                    <a class="nav-link text-dark" asp-controller="Admin" asp-action="Posts"><u>Posts</u></a>
                </li>
                <li class="nav-item @communityLiClass">
                    <a class="nav-link text-dark" asp-controller="Admin" asp-action="Community"><u>Community</u></a>
                </li>
                <li class="nav-item">
                    <a class="nav-link text-dark" asp-controller="Admin" asp-action="Hangfire"><u>Hangfire</u></a>
                </li>
            </ul>
        </div>
    </div>
