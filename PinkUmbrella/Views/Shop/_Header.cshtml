@{
    var actionName = (string) ViewData["Action"];
    var indexLiClass = actionName == "Index" ? "selected" : "";
    var tagsLiClass = actionName == "Tags" ? "selected" : "";
    var newLiClass = actionName == "New" ? "selected" : "";
}
<nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
    <div class="container">
        <h1>Shops</h1>
        <div class="navbar-collapse collapse d-sm-inline-flex flex-sm-row-reverse">
            <ul class="navbar-nav flex-grow-1 highlight-selected">
                <li class="nav-item @indexLiClass">
                    <a class="nav-link text-dark" asp-controller="Shop" asp-action="Index"><u>By Tag</u></a>
                </li>
                <li class="nav-item @tagsLiClass">
                    <a class="nav-link text-dark" asp-controller="Shop" asp-action="Tags"><u>All Tags</u></a>
                </li>
                @if (await _settings.FeatureManager.IsEnabledAsync(nameof(FunctionShopNew)))
                {
                <li class="nav-item @newLiClass">
                    <a class="nav-link text-dark" asp-controller="Shop" asp-action="New"><u>List Your Business</u></a>
                </li>
                }
            </ul>
        </div>
    </div>
</nav>