@model Estuary.Core.BaseObject
@if (Model != null)
{
<a style="display: inline" asp-controller="Person" asp-action="Index" asp-route-id="@Model.PublicId">
    <b>@Model.name</b>
    @if (Model is Estuary.Actors.ActorObject actor)
    {
    <i>@@@actor.Handle</i>
    }
    else
    {
        <b>@Model.id</b>
    }
</a>
}
else
{
    <span><i class="fas fa-user-slash"></i> User N/A</span>
}