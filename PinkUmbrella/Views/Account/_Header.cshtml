@{
    var actionName = (string) ViewData["Action"];
    var detailsLiClass = (actionName == "Index" || actionName == "SetupLoginMethod") ? "selected" : "";
    var keysLiClass = actionName == "AuthKeys" ? "selected" : "";
    var personalDataLiClass = (actionName == "PersonalData" || actionName == "Delete") ? "selected" : "";
    var notificationSettingsLiClass = actionName == "NotificationSettings" ? "selected" : "";
    var inviteLiClass = actionName == "Invite" ? "selected" : "";
    var invitesLiClass = actionName == "Invites" ? "selected" : "";
}
<nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
    <div class="container">
        <h1>@ViewData["Title"]</h1>
        <div class="navbar-collapse collapse d-sm-inline-flex flex-sm-row-reverse">
            <ul class="navbar-nav flex-grow-1 highlight-selected">
                <li class="nav-item @detailsLiClass">
                    <a class="nav-link text-dark" asp-controller="Account" asp-action="Index"><u>Details</u></a>
                </li>
                <li class="nav-item @personalDataLiClass">
                    <a class="nav-link text-dark" asp-controller="Account" asp-action="PersonalData"><u>Personal Data</u></a>
                </li>
                @if (await _settings.FeatureManager.IsEnabledAsync(nameof(FunctionUserManageKeys)))
                {
                <li class="nav-item @keysLiClass">
                    <a class="nav-link text-dark" asp-controller="Account" asp-action="AuthKeys"><u>Keys</u></a>
                </li>
                }
                <li class="nav-item @notificationSettingsLiClass">
                    <a class="nav-link text-dark" asp-controller="Account" asp-action="NotificationSettings"><u>Notification Settings</u></a>
                </li>
                @if (await _settings.FeatureManager.IsEnabledAsync(nameof(FunctionUserInvite)))
                {
                <li class="nav-item @inviteLiClass">
                    <a class="nav-link text-dark" asp-controller="Account" asp-action="Invite"><u>Create Invite</u></a>
                </li>
                <li class="nav-item @invitesLiClass">
                    <a class="nav-link text-dark" asp-controller="Account" asp-action="Invites"><u>Invites</u></a>
                </li>
                }
            </ul>
        </div>
    </div>
</nav>