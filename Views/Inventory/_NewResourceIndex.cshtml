@using PinkUmbrella.ViewModels.Inventory
@model IndexViewModel

<hr />
<form asp-action="NewResourceIndex" asp-controller="Inventory" method="POST">
    <div asp-validation-summary="All" class="text-danger"></div>
    <div class="form-group">
        <label asp-for="NewResource.Resource.InventoryId"></label>
        <select required asp-for="NewResource.Resource.InventoryId" class="form-control">
            @foreach (var i in Model.Inventories) {
                <option value="@i.Id" title="@i.Description">@i.DisplayName</option>
            }
        </select>
        <span asp-validation-for="NewResource.Resource.InventoryId" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="NewResource.Resource.Category"></label>
        <input list="datalist-Category" asp-for="NewResource.Resource.Category" class="form-control" />
        <datalist id="datalist-Category">
            @foreach (var c in Model.NewResource.AvailableCategories) {
                <option value="@c">@c</option>
            }
        </datalist>
        <span asp-validation-for="NewResource.Resource.Category" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="NewResource.Resource.Name"></label>
        <input asp-for="NewResource.Resource.Name" class="form-control" />
        <span asp-validation-for="NewResource.Resource.Name" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="NewResource.Resource.Brand"></label>
        <input list="datalist-Brand" asp-for="NewResource.Resource.Brand" class="form-control" />
        <datalist id="datalist-Brand">
            @foreach (var b in Model.NewResource.AvailableBrands) {
                <option value="@b">@b</option>
            }
        </datalist>
        <span asp-validation-for="NewResource.Resource.Brand" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="NewResource.Resource.Description"></label>
        <input asp-for="NewResource.Resource.Description" class="form-control" />
        <span asp-validation-for="NewResource.Resource.Description" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="NewResource.Resource.Units"></label>
        <input list="datalist-Unit" asp-for="NewResource.Resource.Units" class="form-control" />
        <datalist id="datalist-Unit">
            @foreach (var u in Model.NewResource.AvailableUnits) {
                <option value="@u">@u</option>
            }
        </datalist>
        <span asp-validation-for="NewResource.Resource.Units" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="NewResource.Resource.Amount"></label>
        <input asp-for="NewResource.Resource.Amount" class="form-control" />
        <span asp-validation-for="NewResource.Resource.Amount" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Add</button>
</form>