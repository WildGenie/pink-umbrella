@using seattle.ViewModels.Inventory
@model NewInventoryViewModel
<h4>Create new inventory</h4>
<form asp-action="NewInventory" asp-controller="Inventory" method="POST">
    <div asp-validation-summary="All" class="text-danger"></div>
    <div class="form-group">
        <label asp-for="Inventory.DisplayName"></label>
        <input asp-for="Inventory.DisplayName" class="form-control" />
        <span asp-validation-for="Inventory.DisplayName" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Inventory.Description"></label>
        <input asp-for="Inventory.Description" class="form-control" />
        <span asp-validation-for="Inventory.Description" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Add</button>
</form>