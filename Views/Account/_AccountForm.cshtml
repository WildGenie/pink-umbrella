@model seattle.ViewModels.Account.IndexViewModel
<form asp-controller="Account" asp-action="UpdateEmail" method="POST">
    <div asp-validation-summary="All" class="text-danger"></div>
    <div class="form-group">
        <label asp-for="MyProfile.UserName"></label>
        <input asp-for="MyProfile.UserName" class="form-control" disabled />
    </div>
    <div class="form-group">
        <label asp-for="MyProfile.Email"></label>
        @if (Model.MyProfile.EmailConfirmed)
        {
            <div class="input-group">
                <input asp-for="MyProfile.Email" class="form-control" />
                <span class="input-group-addon" aria-hidden="true"><span class="glyphicon glyphicon-ok text-success"></span></span>
            </div>
        }
        else
        {
            <input asp-for="MyProfile.Email" class="form-control" />
            <button id="email-verification" type="submit" asp-page-handler="SendVerificationEmail" class="btn btn-link">Send verfication email</button>
        }
        <span asp-validation-for="MyProfile.Email" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-success">Update Email</button>
</form>