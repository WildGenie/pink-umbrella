@model seattle.ViewModels.Account.IndexViewModel
<form id="profile-form" method="post">
    <div asp-validation-summary="All" class="text-danger"></div>
    <div class="form-group">
        <label asp-for="User.UserName">Username</label>
        <input asp-for="User.UserName" class="form-control" disabled />
    </div>
    <div class="form-group">
        <label asp-for="User.Email"></label>
        @if (Model.User.EmailConfirmed)
        {
            <div class="input-group">
                <input asp-for="User.Email" class="form-control" />
                <span class="input-group-addon" aria-hidden="true"><span class="glyphicon glyphicon-ok text-success"></span></span>
            </div>
        }
        else
        {
            <input asp-for="User.Email" class="form-control" />
            <button id="email-verification" type="submit" asp-page-handler="SendVerificationEmail" class="btn btn-link">Send verfication email</button>
        }
        <span asp-validation-for="User.Email" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-success">Save</button>
</form>