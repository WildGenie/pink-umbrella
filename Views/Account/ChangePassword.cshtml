@using seattle.Services;
@using Microsoft.AspNetCore.Identity
@model seattle.ViewModels.Account.ChangePasswordViewModel
@{
    ViewData["Title"] = "Change Password";
}
<partial name="_Header" />
<div class="row col-md-8">
    <div class="col-md-8 col-lg-offset-3">
        <form method="post">
            <div class="row">
                <div asp-validation-summary="All" class="text-danger col-md-12"></div>
                <div class="form-group">
                    <label asp-for="CurrentPassword" class="control-label col-md-4"></label>
                    @Html.PasswordFor(m => m.CurrentPassword, new { @class = "form-control input-lg" })
                    @Html.ValidationMessageFor(m => m.CurrentPassword, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="row">
                <div class="form-group">
                    <label asp-for="NewPassword" class="control-label col-md-4"></label>
                    @Html.PasswordFor(m => m.NewPassword, new { @class = "form-control input-lg" })
                    @Html.ValidationMessageFor(m => m.NewPassword, "", new { @class = "text-danger" })
                </div>
                <div class="form-group">
                    <label asp-for="ConfirmPassword" class="control-label col-md-4"></label>
                    @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control input-lg" })
                    @Html.ValidationMessageFor(m => m.ConfirmPassword, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="row">
                <button type="submit" class="btn btn-primary">Save</button>
            </div>
        </form>
    </div>
</div>