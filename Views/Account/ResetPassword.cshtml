@model PinkUmbrella.ViewModels.Account.ResetPasswordViewModel
@{
    ViewData["Title"] = "Reset Password";
}

<partial name="_Header" />
<form asp-controller="Account" asp-action="ResetPassword" method="post">
    <div asp-validation-summary="All"></div>
    <input asp-for="Code" type="hidden" />
    <input type="text" asp-for="Email" placeholder="Email" /> <br />
    <input type="password" asp-for="Password" placeholder="Password" /> <br />
    <input type="password" asp-for="ConfirmPassword" placeholder="Confirm Password" /> <br />
    <input type="submit" value="Reset" />
</form>